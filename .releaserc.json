{
  "branches": [
    "main",
    "+([0-9])?(.{+([0-9]),x}).x",
    {
      "name": "release/rc",
      "prerelease": "rc"
    },
    {
      "name": "release/dev",
      "prerelease": "dev"
    }
  ],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    "@semantic-release/changelog",
    "@semantic-release/npm",
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "./releases/gaia-mcp-server-linux-x64",
            "name": "gaia-mcp-server-linux-x64",
            "label": "Linux (x64) Binary"
          },
          {
            "path": "./releases/gaia-mcp-server-darwin-x64",
            "name": "gaia-mcp-server-darwin-x64",
            "label": "macOS (x64) Binary"
          },
          {
            "path": "./releases/gaia-mcp-server-darwin-arm64",
            "name": "gaia-mcp-server-darwin-arm64",
            "label": "macOS (ARM64) Binary"
          },
          {
            "path": "./releases/gaia-mcp-server-win32-x64.exe",
            "name": "gaia-mcp-server-win32-x64.exe",
            "label": "Windows (x64) Binary"
          }
        ]
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["package.json", "CHANGELOG.md"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ]
  ]
}